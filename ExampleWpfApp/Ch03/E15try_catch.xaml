<Page x:Class="ExampleWpfApp.Ch03.E15try_chtch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="E15try">
    <DockPanel Height="180" Width="360" HorizontalAlignment="Left" VerticalAlignment="Top">
        <TextBlock DockPanel.Dock="Top" Text="【例3-15】try语句"/>
        <WrapPanel DockPanel.Dock="Top">
            <Button Name="btn1" Margin="10 5" Padding="10 2" Content="用Console实现" />
            <Button Name="btn2" Margin="10 5" Padding="10 2" Content="[显示/隐藏]WPF实现" />
        </WrapPanel>
        <Separator DockPanel.Dock="Top" Margin="0 10 0 15"/>
        <Grid Name="grid1">
            <WrapPanel>
                <Label Content="请输入x和y的值(逗号分隔)：" />
                <TextBox Name="textBox1" Height="23" Width="80"/>
                <Button Name="btnOK" Margin="20 0" Padding="10 2" Content="确定" />
            </WrapPanel>
            <GroupBox Header="结果" Margin="0 20 0 0"
                      Height="60" BorderBrush="Green" BorderThickness="2">
                <TextBlock Name="result"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </GroupBox>
        </Grid>
    </DockPanel>
</Page>
